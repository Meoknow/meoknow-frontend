/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}



.neko-box{
  padding:0 40rpx;
  margin-bottom: 100rpx;
}
.neko-box .neko-list{
  display: inline-block;
  width: 325rpx;
  height: 325rpx;
  margin:0 20rpx 20rpx 0;
  border-radius: 10px;
  text-align: center;
  background: #f5f6f5;
}
.neko-box .neko-list:nth-child(2n){
  margin-right: 0;
}
.neko-box .neko-list image{
  width: 175rpx;
  height: 175rpx;
  margin: 80rpx 0 10rpx;
}
.neko-box .neko-list .neko-text{
  font-size: 32rpx;
}

.search{
  padding: 20rpx;
}
.search-text{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #aaa;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 20rpx;
}
.search-text icon{
  margin-right: 10rpx;
}