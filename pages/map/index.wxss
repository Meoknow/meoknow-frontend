/*模态框*/
.select-image{
  width: 555rpx;
  height: 555rpx;

  flex-direction: row;
}
.modal-image{

  width: 375rpx;
  height: 375rpx;
  margin: 0rpx 0rpx 10rpx;
  margin-left: 10rpx;
  flex-direction: row;
}
.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0);
}
 
.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0rpx;
  left: 0;
  right: 0;
  height: 500rpx;
  background-color: #fff;
}
.ImageAndInfo{
  display: flex;
  flex-direction: row;
  
}
.updateInfo{
  margin-top: 40rpx;
  font-size : 50rpx ;
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  line-height: 85rpx;
}
.text_small{
  font-size: 30rpx;
  word-break:break-all;
  color: #7a7878
}
