.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.manpCenter {
  width: 48rpx;
  height: 77rpx;
  position: absolute;
  left: calc(50% - 24rpx);
  top: calc(50% - 77rpx);
}
.position{
  width:100% ;
  height: 40px;
  display:flex;
  align-items:center;    /*垂直居中 */
 justify-content:center;    /* 水平居中 */
}
.page-body-button {

  font-size: 40rpx;
  border-radius: 100rpx;
  vertical-align:middle;
  text-align: center;
  margin-bottom: 10rpx;
}
.btn-area{
  margin-top: 30rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}
.customCallout {
  box-sizing: border-box;
  background-color: #fff; 
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
  width: 250rpx;
  height: 70rpx;
  display: inline-flex;
  padding: 5rpx 20rpx;
  justify-content: center;
  align-items: center;
}

.circle {
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
}

.icon {
  width: 16rpx;
  height: 16rpx;
}

.content {
  flex: 0 1 auto;
  margin: 0 10rpx;
  font-size: 14rpx;
}
/*单选框*/

.radio {
  margin-right: 180rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

