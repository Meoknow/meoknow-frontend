/**index.wxss**/
html, body{ margin:0; height:100%; }

.myfillup {
  opacity: 1;
  position:absolute;
  z-index: -1;
  background-repeat: repeat;
}

.descripterBlank {
  position: static;
  height: 10%;
}

.descripter {
  position: static;
  width: 100%;
  height: 10%;
  text-align: center;
  box-sizing: border-box;
  z-index: 1;
  font-family:'sans-serif';
  font-weight:bold;
  color: rgb(0, 0, 0);
  font-size:80rpx;
}
.mySubTitle {
  position: static;
  text-align: center;
  height: 13%;
  box-sizing: border-box;
  z-index: 1;
  font-family:'sans-serif';
  color: rgb(128, 64, 0);
  font-size:30rpx;
}

.backGround {
  opacity: 1;
  align-items: baseline;
  position:absolute;
  text-align:center;
  height: 50%;
  width: 100%;
  bottom: 0rpx;
  left: 0;
  right: 0;
  z-index: 0;
}
.myButtonImage {
  position: absolute;
  margin-left: 270rpx;
  height: 200rpx;
  width: 200rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center; /** flex 属性， 水平居中**/
  color: #aaa;
}

.modalDlg {
  width: 500rpx;
  height: 600rpx;
  position: absolute;
  top: 55%;
  left: 50rpx;
  z-index: 5;
  margin: -370rpx 85rpx;
  background-color: rgb(248,248,248);
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.myswiper{
  position: absolute;
  z-index: 8;
  margin-top: 15%;
  height: 90%;
  width: 600rpx;
}
.myswiperItem{
  position: absolute;
  z-index: 9;
  display: block;
  height: 60%;
  width: 600rpx;
}
.myswiperNote{
  z-index: 9;
  position: relative;
  display: block;
  text-align: center;
  top: 65%;
  width: 600rpx;
  white-space:pre-wrap;
  font-family:"宋体", "楷体", serif;
  font-size:32rpx;
  color: #8E2323
}
.pageBody {
  position: absolute;
  width: 100%;
  height: 87%;
  background-color: rgb(248,248,248);
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 4;
  opacity: 0.7;
}
.close_mask {
  color: #000;
  position: relative;
  left: 40%;
  /* top: -82%; */
  font-size: 40rpx;
}